@{
    Layout = "~/views/shared/_Layout.cshtml";
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <tr id="products"></tr>
    </table>
</div>



<script type="text/javascript">
    $(function () {
        getProducts();
    });



    function getProducts() {
        jQuery.support.cors = true;
        $.ajax({
            url: 'http://localhost:7899/api/products',
            type: 'Get',
            contentType: 'application/json;charset=utf-8',
            dataType:'json',
            success: function () {
                for (var i = 0; i < data.lenght; i++) {
                    var rows = "<td>" + data[i].ProductId + "</td><td>" + data[i].Name + "</td><td>" + data[i].Price + "</td>"
                    $('#products').html('<th>ProductId</th><th>Name</th><th>Price</th>' + rows);
                }
            }
        });

    }
</script>