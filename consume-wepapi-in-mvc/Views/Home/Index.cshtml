@{ 
    Layout = "~/views/shared/_Layout.cshtml";
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
       <thead>
           <tr>
               <th>id</th>
               <th>Name</th>
               <th>Price</th>
           </tr>
       </thead>
        <tr id="products">
            
        </tr>
    </table>
</div>



<script type="text/javascript">
    $(function () {
        getProducts();
    });



    function getProducts() {
        jQuery.support.cors = true;
        $.ajax({
            url: 'http://localhost:7899/api/products',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                var products = data;
                for (var i = 0; i < products.length; i++) {
                    $('#products').append("<td>" + products[i].ProductId + "</td><td>" + products[i].Name + "</td><td>" + products[i].Price + "</td>");
                }
            },
            error: function (x, y, z) {
                alert(x + '\n' + y + '\n' + z);
            }
        });  

    }
</script>